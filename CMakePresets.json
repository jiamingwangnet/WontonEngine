{
  "version": 3,
    "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
        "hidden": true,
        "name": "windows-mingw",
        "binaryDir": "${sourceDir}/out/build-mingw/${presetName}",
        "installDir": "${sourceDir}/out/install-mingw/${presetName}",
        "cacheVariables": {
            "CMAKE_C_COMPILER": "gcc.exe",
            "CMAKE_CXX_COMPILER": "g++.exe"
        },
        "generator": "NMake Makefiles"
    },
      {
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        },
        "displayName": "x64 Debug",
        "inherits": "windows-base",
        "name": "x64-debug"
      },
      {
        "name": "x64-release",
        "displayName": "x64 Release",
        "inherits": "x64-debug",

        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        }
      },

      {
        "architecture": {
          "value": "x86",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        },
        "displayName": "x86 Debug",
        "inherits": "windows-base",
        "name": "x86-debug"
      },
      {
        "name": "x86-release",
        "displayName": "x86 Release",
        "inherits": "x86-debug",

        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        }
      },


      {
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        },
        "displayName": "x64 Debug MinGW",
        "inherits": "windows-mingw",
        "name": "x64-debug-mingw"
      },
      {
        "name": "x64-release-mingw",
        "displayName": "x64 Release MinGW",
        "inherits": "x64-debug-mingw",

        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        }
      },

      {
        "architecture": {
          "value": "x86",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        },
        "displayName": "x86 Debug MinGW",
        "inherits": "windows-mingw",
        "name": "x86-debug-mingw"
      },
      {
        "name": "x86-release-mingw",
        "displayName": "x86 Release MinGW",
        "inherits": "x86-debug-mingw",

        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "SDL_LIB_PATH": "",
          "SDL_DLL_PATH": "",
          "SDL_INCLUDE_PATH": "",
          "GLM_INCLUDE_PATH": ""
        }
      }
  ]
}
